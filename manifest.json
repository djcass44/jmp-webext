{
  "name": "JMP",
  "version": "0.2",
  "description": "JMP web helper",
  "permissions": [
    "storage",
    "https://jmp.castive.dev/*"
  ],
  "omnibox": {
    "keyword": "jmp"
  },
  "optional_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "__firefox__browser_specific_settings": {
    "gecko": {
      "id": "jmp-web@castive.dev",
	    "strict_min_version": "57.0"
    }
  },
  "__chrome__options_page": "options.html",
  "__firefox__options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "background": {
    "scripts": [
      "/static/js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "16": "logo/favicon.png",
      "32": "logo/favicon.png",
      "48": "logo/favicon.png",
      "128": "logo/favicon.png"
    },
    "default_title": "JMP",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "logo/favicon.png",
    "32": "logo/favicon.png",
    "48": "logo/favicon.png",
    "128": "logo/favicon.png"
  },
  "manifest_version": 2
}